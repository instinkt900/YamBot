{
    "compilerOptions": {
        "noImplicitAny": true,
        "esModuleInterop": true,
        "target": "ES2020",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "declaration": true,
        "outDir": "./dist"
    },
    "include": ["src/**/*.ts"],
}
